{
  "manifestVersion": 1,
  "id": "build-release-task",
  "name": "Build Task example",
  "version": "0.0.2",
  "publisher": "StanislavParkhomenko",
  "targets": [
    {
      "id": "Microsoft.VisualStudio.Services"
    }
  ],
  "description": "Example extension. Includes one build/release task.",
  "categories": [
    "Azure Pipelines"
  ],
  "icons": {
    "default": "images/sample-icon.png"
  },
  "files": [
    {
      "path": "nodeFiles"
    }
  ],
  "contributions": [
    {
      "id": "custom-build-release-task",
      "type": "ms.vss-distributed-task.task",
      "targets": [
        "ms.vss-distributed-task.tasks"
      ],
      "properties": {
        "name": "buildAndReleaseTask"
      }
    }
  ]
}
